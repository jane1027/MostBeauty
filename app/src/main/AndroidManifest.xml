<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.m520it.mostbeautiful">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MBApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_mine_portrait"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Splashactivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.MimeSettingActivity"/>
        <activity android:name=".activity.EditorActivity"/>
        <activity android:name=".activity.ConfirmActivity"/>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.DesignItemActivity"/>

        <activity android:name=".activity.MainActivity" android:launchMode="singleInstance"/>
        <activity android:name=".activity.DesignDetailsActivity" android:launchMode="singleTop">
        </activity>
        <activity android:name=".activity.HaveThingDetailActivity" android:launchMode="singleTop"/>
        <activity android:name=".activity.SuggestionActivity" android:launchMode="singleTop" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.CommentActivity"/>
        <activity android:name=".activity.WebActivity" android:launchMode="singleTop"/>
    </application>

</manifest>