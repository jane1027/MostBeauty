<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
             >
    <ImageView
        android:id="@+id/recommend_images"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/no_wifi_icon_white"
        android:background="@color/black"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/detail_ll"
        android:background="#413f3f"
        android:gravity="center_horizontal"
        android:layout_below="@id/recommend_images"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jane"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安卓创始人"/>
        <Button
            android:focusable="false"
            android:layout_marginBottom="8dp"
            android:id="@+id/focus"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="+关注"
            android:textSize="15sp"
            android:background="#45ecd3"/>
        <View
            android:layout_alignBottom="@id/detail_ll"
            android:layout_below="@id/detail_ll"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/black"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/avatar_url"
        android:layout_below="@id/recommend_images"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_mine_portrait"
        app:civ_border_color="@color/dark"
        />
    <View
        android:layout_alignBottom="@id/detail_ll"
        android:layout_below="@id/detail_ll"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#fff"/>

</RelativeLayout>